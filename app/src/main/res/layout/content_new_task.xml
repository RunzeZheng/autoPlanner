<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.autoplanner.NewTask"
    tools:showIn="@layout/app_bar_new_task">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".newTaskActivity">

        <TextView
            android:id="@+id/what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-light"
            android:text="What: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/whatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_below="@+id/what"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/whatText"
            android:fontFamily="sans-serif-light"
            android:text="Deadline:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker"
            android:fadingEdge="none"
            android:fadingEdgeLength="10dip"
            android:overScrollMode="ifContentScrolls"
            android:layout_alignParentLeft="false"
            android:layout_alignLeft="@+id/deadline"
            android:layout_below="@+id/deadline"
            android:layout_margin="5dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker2"
            android:layout_alignBottom="@+id/numberPicker"
            android:layout_toRightOf="@+id/numberPicker" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker3"
            android:layout_alignBottom="@+id/numberPicker2"
            android:layout_toRightOf="@+id/numberPicker2"
            android:layout_marginLeft="5dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker4"
            android:layout_alignBottom="@+id/numberPicker3"
            android:layout_toRightOf="@+id/numberPicker3"
            android:layout_marginLeft="5dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker5"
            android:layout_alignBottom="@+id/numberPicker4"
            android:layout_toRightOf="@+id/numberPicker4"
            android:layout_marginLeft="5dp" />

        <TextView
            android:text="Time needed: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/numberPicker"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/durationText"
            android:layout_below="@+id/duration" />

        <TextView
            android:text="Hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_toRightOf="@+id/durationText"
            android:layout_alignBottom="@+id/durationText"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/durationText"
            android:fontFamily="sans-serif-light"
            android:text="Where:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/whereText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/where"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whereText"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:text="Add"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

    </RelativeLayout>
</RelativeLayout>
